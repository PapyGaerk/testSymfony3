                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">{{ app.user.username }}</a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="{{ path('app_logout') }}">Deconnection</a>
                    </div>
                </li>
            {% else %}
                <li class="nav-item">
                    <a class="nav-link active" href="{{ path('login') }}">Connexion</a>
