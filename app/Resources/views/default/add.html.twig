{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid d-flex flex-wrap  justify-content-center">
        <h1 class="w-100 p-4 text-center">{{ title }}</h1>
        {{ form_start(form) }}
        <div class="row mb-3">
            <div class="col">
                {{ form_label(form.name) }}
                {{ form_widget(form.name, {attr: {class: 'form-control', placeholder: 'Monkey'} }) }}
            </div>
            <div class="col">
                {{ form_label(form.description) }}
                {{ form_widget(form.description, {attr: {class: 'form-control', placeholder: 'D Luffy'} }) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.image) }}
            {{ form_widget(form.image, {attr: {class: 'form-control-file'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.categorie) }}
            {{ form_widget(form.categorie, {attr: {class: 'form-control'} }) }}
        </div>
        {{ form_widget(form.save, {attr: {class: 'btn btn-primary'} }) }}
        {{ form_end(form) }}
    </div>
{% endblock %}