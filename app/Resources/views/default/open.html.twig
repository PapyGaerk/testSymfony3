{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid d-flex flex-wrap  justify-content-center">
        <h1 class="w-100 p-4 text-center">Contact</h1>
        {{ form_start(form) }}
        <div class="row mb-3">
            <div class="col">
                {{ form_label(form.name) }}
                {{ form_widget(form.name, {attr: {class: 'form-control', placeholder: 'Simon'} }) }}
            </div>
            <div class="col">
                {{ form_label(form.surname) }}
                {{ form_widget(form.surname, {attr: {class: 'form-control', placeholder: 'Gioffredi'} }) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.email) }}
            {{ form_widget(form.email, {attr: {class: 'form-control', placeholder: 'simon@spin-interactive.com'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.message) }}
            {{ form_widget(form.message, {attr: {class: 'form-control', placeholder: 'Message'} }) }}
        </div>
        {{ form_widget(form.save, {attr: {class: 'btn btn-primary'} }) }}
        {{ form_end(form) }}
    </div>
{% endblock %}